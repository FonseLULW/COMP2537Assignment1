<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokedex-Receipts! A01262284</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="styles/universal.css">
    <link rel="stylesheet" href="styles/receipts.css">
    <link rel="stylesheet" href="styles/universal-mq.css">
</head>

<body>
    <!-- Header -->
    <header>
        <h1>
            Jose Alfonso Clarito - Receipts!
        </h1>
    </header>

    <!-- Navbar -->
    <nav>
        <a class="navlink-container" id="home" href="/home">
            <span class="navlink">Home</span>
        </a>
        <a class="navlink-container" id="user" href="/user">
            <span class="navlink">Profile</span>
        </a>
        <a class="navlink-container" id="search" href="/search">
            <span class="navlink">Search</span>
        </a>
        <a class="navlink-container" id="timeline" href="/timeline">
            <span class="navlink">Timeline</span>
        </a>
        <a class="navlink-container" id="checkout" href="/checkout">
            <span class="navlink">Checkout</span>
        </a>
        <a class="navlink-container" id="receipts" href="/receipts">
            <span class="navlink">Receipts</span>
        </a>
        <a class="navlink-container" id="play" href="/play">
            <span class="navlink">Play</span>
        </a>
        <a class="navlink-container" id="logout" href="/auth/logout">
            <span class="navlink">Logout</span>
        </a>
    </nav>

    <!-- Receipts -->
    <main>
        <h2>Your Orders! <i>(No refunds)</i></h2>
        <section id="orders">
            <% data.forEach(order=> { %>
                <div class="single-order <%= order.orderStatus %>">
                    <div class="cell empty">

                    </div>
                    <h4 class="cell o-timestamp">
                        <%= order.createdAt.toLocaleString("en-GB", { dateStyle: "medium" , timeStyle: "short"})%>
                    </h4>
                    <div class="cell o-subtotal">
                        <div class="label">Subtotal:</div>
                        <div class="info">
                            <%= order.productsCost.toLocaleString('en-GB', { style: 'currency' , currency: 'CAD' }) %>
                        </div>
                    </div>
                    <div class="cell o-tax">
                        <div class="label">Sales Tax:</div>
                        <div class="info">
                            <%= order.taxCost * 100 %>%
                        </div>
                    </div>
                    <div class="cell o-total">
                        <div class="label">Total:</div>
                        <div class="info">
                            <%= order.totalCost.toLocaleString('en-GB', { style: 'currency' , currency: 'CAD' }) %>
                        </div>
                    </div>
                    <div class="cell o-status">
                        <span class="status label">Status: </span>
                        <span class="status info"><%= order.orderStatus[0].toUpperCase() +
                            order.orderStatus.substring(1) %></span>
                    </div>
                </div>
                <% }) %>
        </section>
    </main>

    <!-- Footer -->
    <footer>
        <h5>
            Copyright Â© FonseLULW; API from
            <a href="https://pokeapi.co">pokeAPI</a>
        </h5>
    </footer>

    <!-- Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/scripts/universal.js"></script>
    <script src="/scripts/events.js"></script>
    <script src="/scripts/receipts.js"></script>
</body>

</html>