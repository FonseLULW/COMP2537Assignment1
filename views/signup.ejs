<body>
    <!-- Header -->
    <header>
        <h1>
            Jose Alfonso Clarito - Sign Up!
        </h1>
    </header>

    <!-- Navbar -->
    <nav>
    </nav>

    <main>
        <div id="loginform-container">
            <h2>Create a new account!</h2>
            <form id="loginForm" action="/auth/signup" method="POST">
                <div id="errMsg"><%= err %></div>
                <div class="fields">
                    <label for="email">Email:</label>
                    <input name="email" type="email" class="textfields" placeholder="email@domain.com" autocomplete="off" required>
                </div>
                <div class="fields">
                    <label for="username">Username:</label>
                    <input name="username" type="text" class="textfields" autocomplete="off" required>
                </div>
                <div class="fields">
                    <label for="password">Password:</label>
                    <input name="password" type="password" class="textfields" autocomplete="off" required>
                </div>
                <input id="submitBtn" type="submit" value="Create Account">
            </form>
            <div id="footnote">Already have an account? <a href="/">Login</a>!</div>
        </div>
    </main>

