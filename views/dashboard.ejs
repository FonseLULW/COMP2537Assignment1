<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokedex-User! A01262284</title>

    <!-- Google Icons -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <!-- Stylesheets -->
    <link rel="stylesheet" href="/styles/universal.css">
    <link rel="stylesheet" href="/styles/dashboard.css">
    <link rel="stylesheet" href="/styles/universal-mq.css">
</head>

<body>
    <!-- Header -->
    <header>
        <h1>
            Jose Alfonso Clarito - Admin!
        </h1>
    </header>

    <!-- Navbar -->
    <nav>
        <a class="navlink-container" id="home" href="/home">
            <span class="navlink">Home</span>
        </a>
        <a class="navlink-container" id="user" href="/user">
            <span class="navlink">Profile</span>
        </a>
        <a class="navlink-container" id="search" href="/search">
            <span class="navlink">Search</span>
        </a>
        <a class="navlink-container" id="timeline" href="/timeline">
            <span class="navlink">Timeline</span>
        </a>
        <a class="navlink-container" id="checkout" href="/checkout">
            <span class="navlink">Checkout</span>
        </a>
        <a class="navlink-container" id="receipts" href="/receipts">
            <span class="navlink">Receipts</span>
        </a>
        <a class="navlink-container" id="play" href="/play">
            <span class="navlink">Play</span>
        </a>
        <a class="navlink-container" id="logout" href="/auth/logout">
            <span class="navlink">Logout</span>
        </a>
    </nav>

    <!-- Main -->
    <main id="content">
        <!-- Header for this page -->
        <h2 class="header">
            <span class="head-icon material-symbols-outlined back">
                arrow_back
            </span>
            <span class="head-text">All User Accounts</span>
        </h2>

        <!-- Accounts List -->
        <section id="accounts">

            <% accounts.forEach(account=> { %>
                <!-- One single account -->
                <div class="single-account">

                    <!-- Status Section -->
                    <div class="status">
                        <% if (account.admin) { %>
                            <div class="tag">Admin</div>
                            <% } %>
                    </div>

                    <!-- Info Section -->
                    <div class="info">
                        <div class="username">
                            <span class="uname-info label">Username:</span>
                            <span class="uname-info val">
                                <%= account.username %>
                            </span>
                        </div>
                        <div class="email">
                            <span class="email-info label">Email:</span>
                            <span class="email-info val">
                                <%= account.email %>
                            </span>
                        </div>
                    </div>

                    <!-- Controls Section -->
                    <div class="controls">
                        <div class="a-switch">
                            <span class="admin-label">Toggle Admin:</span>
                            <span class="admin-toggle">
                                <label class="switch">
                                    <input type="checkbox" 
                                    <% if (account.admin) { %>
                                     checked
                                    <% } %>
                                    <% if (account.id == userId) { %>
                                     disabled
                                    <% } %>
                                    >
                                    <span class="slider round"></span>
                                </label>
                            </span>
                        </div>
                        <div class="a-delete">
                            <span class="material-symbols-outlined">
                                delete
                            </span>
                        </div>
                    </div>
                </div>
                <% }) %>
            <!-- Add new account -->
            <button class="account-create">
                <span class="material-symbols-outlined">
                    add
                </span>
            </button>
        </section>
    </main>

    <!-- Footer -->
    <footer>
        <h5>
            Copyright Â© FonseLULW; API from
            <a href="https://pokeapi.co">pokeAPI</a>
        </h5>
    </footer>

    <!-- Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/scripts/universal.js"></script>
    <script src="/scripts/events.js"></script>
    <script src="/scripts/dashboard.js"></script>
</body>

</html>