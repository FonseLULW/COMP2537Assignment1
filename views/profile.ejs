<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokedex-Profile! A01262284</title>

    <!-- Google Icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <!-- Stylesheets -->
    <link rel="stylesheet" href="/styles/universal.css">
    <link rel="stylesheet" href="/styles/profile.css">
    <link rel="stylesheet" href="/styles/universal-mq.css">
</head>
<body>
    <!-- Header -->
    <header>
        <h1>
            Jose Alfonso Clarito - Pokedex!
        </h1>
    </header>

    <!-- Navbar -->
    <nav>
        <a class="navlink-container" id="home" href="/home">
            <span class="navlink">Home</span>
        </a>
        <a class="navlink-container" id="user" href="/user">
            <span class="navlink">Profile</span>
        </a>
        <a class="navlink-container" id="search" href="/search">
            <span class="navlink">Search</span>
        </a>
        <a class="navlink-container" id="timeline" href="/timeline">
            <span class="navlink">Timeline</span>
        </a>
        <a class="navlink-container" id="checkout" href="/checkout">
            <span class="navlink">Checkout</span>
        </a>
        <a class="navlink-container" id="receipts" href="/receipts">
            <span class="navlink">Receipts</span>
        </a>
        <a class="navlink-container" id="play" href="/play">
            <span class="navlink">Play</span>
        </a>
        <a class="navlink-container" id="logout" href="/auth/logout">
            <span class="navlink">Logout</span>
        </a>
    </nav>

    <!-- Main -->
    <main id="content">
        <!-- Image -->
        <figure id="pImg">
            <img alt="<%= pokemon.name %>" src="<%= pokemon.sprites.other["official-artwork"].front_default %>">
        </figure>

        <!-- Name & Id-->
        <h2 id="pIdentity">
            <div id="pName"><%= pokemon.name.toUpperCase() %></div>
            <div id="pID"><%= pokemon.id %></div>
            <a id="pBuy" class="navlink-container"><span class="material-symbols-outlined">shopping_cart</span></a>
        </h2>

        <!-- Type  -->
        <div id="pTypes">
            <h3>Types</h3>
            <% pokemon.types.forEach((elem) => { %>
                <div class="types info"><%= elem.type.name.toUpperCase() %></div>
            <% }) %>
        </div>

        <!-- Stats -->
        <div id="pStats">
            <h3 id="h3Stats">Stats</h3>
            <% pokemon.stats.forEach((elem) => { %>
                <div class="stats info">
                    <div class="statname"><%= elem.stat.name.toUpperCase() %></div>
                    <progress class="statpts" value="<%= elem.base_stat %>" max="255"><%= elem.base_stat %></progress>
                </div>
            <% }) %>
        </div>

        <!-- Abilities -->
        <div id="pAbilities">
            <h3>Abilities</h3>
            <% pokemon.abilities.forEach((elem) => { %>
                <div class="ables info"><%= elem.ability.name.toUpperCase() %></div>
            <% }) %>
        </div>
    </main>

    <!-- Footer -->
    <footer>
        <h5>
            Copyright Â© FonseLULW; API from 
            <a href="https://pokeapi.co">pokeAPI</a>
        </h5>
    </footer>

    <!-- Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/scripts/universal.js"></script>
    <script src="/scripts/events.js"></script>
    <script src="/scripts/profile.js"></script>
</body>
</html>