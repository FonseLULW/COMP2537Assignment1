<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokedex-Timeline! A01262284</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="styles/universal.css">
    <link rel="stylesheet" href="styles/timeline.css">
    <link rel="stylesheet" href="styles/universal-mq.css">
</head>
<body>
    <!-- Header -->
    <header>
        <h1>
            Jose Alfonso Clarito - Timeline!
        </h1>
    </header>

    <!-- Navbar -->
    <nav>
        <a class="navlink-container" id="home" href="/home">
            <span class="navlink">Home</span>
        </a>
        <a class="navlink-container" id="search" href="/search">
            <span class="navlink">Search</span>
        </a>
        <a class="navlink-container" id="timeline" href="/timeline">
            <span class="navlink">Timeline</span>
        </a>
    </nav>

    <!-- Timeline -->
    <main>
        <section id="timeline-items">  
            <% events.forEach(event => { %>
                <div id="<%=event.id%>" class="single-event">
                    <div class="event-data">
                        <div class="datetime">
                            <span class="date"><%=event.date%></span>
                            <span class="time"><%=event.time%></span>
                        </div>
                        <div class="text">Event: <span><%=event.text%></span></div>
                        <div class="hits">Likes: <span><%=event.hits%></span></div>
                    </div>
                    <div class="event-controls">
                        <button class="like">Like</button>
                        <button class="delete">Delete</button>
                    </div>
                </div>
            <% }) %>
        </section>
    </main>
    
    <!-- Footer -->
    <footer>
        <h5>
            Copyright Â© FonseLULW; API from 
            <a href="https://pokeapi.co">pokeAPI</a>
        </h5>
    </footer>
    
    <!-- Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/scripts/universal.js"></script>
    <script src="/scripts/events.js"></script>
    <script src="/scripts/timeline.js"></script>
</body>
</html>