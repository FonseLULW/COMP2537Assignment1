<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokedex-User! A01262284</title>

    <!-- Google Icons -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <!-- Stylesheets -->
    <link rel="stylesheet" href="/styles/universal.css">
    <link rel="stylesheet" href="/styles/dashboard.css">
    <link rel="stylesheet" href="/styles/universal-mq.css">
</head>

<body>
    <!-- Header -->
    <header>
        <h1>
            Jose Alfonso Clarito - Admin!
        </h1>
    </header>

    <!-- Navbar -->
    <nav>
        <a class="navlink-container" id="home" href="/home">
            <span class="navlink">Home</span>
        </a>
        <a class="navlink-container" id="user" href="/user">
            <span class="navlink">Profile</span>
        </a>
        <a class="navlink-container" id="search" href="/search">
            <span class="navlink">Search</span>
        </a>
        <a class="navlink-container" id="timeline" href="/timeline">
            <span class="navlink">Timeline</span>
        </a>
        <a class="navlink-container" id="checkout" href="/checkout">
            <span class="navlink">Checkout</span>
        </a>
        <a class="navlink-container" id="receipts" href="/receipts">
            <span class="navlink">Receipts</span>
        </a>
        <a class="navlink-container" id="play" href="/play">
            <span class="navlink">Play</span>
        </a>
        <a class="navlink-container" id="logout" href="/auth/logout">
            <span class="navlink">Logout</span>
        </a>
    </nav>

    <!-- Main -->
    <main id="content">
        <!-- Header for this page -->
        <h2 class="header">
            <span class="head-icon material-symbols-outlined back">
                arrow_back
            </span>
            <span class="head-text">All User Accounts</span>
        </h2>

        <!-- Accounts List -->
        <section id="accounts">

            <% accounts.forEach(account=> { %>
                <!-- One single account -->
                <form class="single-account currentUser" action="/admin/editUser" method="POST" autocomplete="off">
                    <!-- Status Section -->
                    <div class="status">
                        <% if (account.admin) { %>
                            <div class="tag">ADMIN</div>
                            <% } %>
                    </div>

                    <!-- Info Section -->
                    <div class="info">
                        <div class="username">
                            <label for="newUsername" class="uname-info label">Username:</label>
                            <input type="text" name="newUsername" class="uname-info val" value="<%= account.username %>"
                                readonly required autocomplete="off">
                        </div>
                        <div class="email">
                            <label for="email" class="email-info label">Email:</label>
                            <input type="email" name="email" class="email-info val" value="<%= account.email %>"
                                readonly required autocomplete="off">
                        </div>
                    </div>

                    <!-- Controls Section -->
                    <div class="controls">
                        <div class="update">
                            <button type="button" class="edit btn">Edit</button>
                            <input type="submit" class="save btn hidden" value="Save">
                        </div>
                        <div class="a-switch">
                            <button type="button" class="toggleAdmin btn 
                            <% if (account.id==userId) { %>
                                disabled
                            <% } %>
                            " <% if (account.id==userId) { %>
                                disabled
                                <% } %>
                                    >
                                    Toggle Admin
                            </button>
                        </div>
                        <div class="a-delete
                        <% if (account.id==userId) { %>
                         disabled
                        <% } %>
                        ">
                            <span class="material-symbols-outlined">
                                delete
                            </span>
                        </div>
                    </div>
                </form>
                <% }) %>
                    <form class="single-account newEntry hidden" action="/admin/createUser" method="POST" autocomplete="off">
                        <div class="status">
                            <input type="checkbox" value="Admin" class="tag">
                        </div>

                        <div class="info">
                            <div class="username">
                                <label for="newUsername" class="uname-info label">Username:</label>
                                <input type="text" name="newUsername" class="uname-info val" placeholder="Username"
                                    required autocomplete="off">
                            </div>
                            <div class="email">
                                <label for="email" class="email-info label">Email:</label>
                                <input type="email" name="email" class="email-info val" placeholder="email@domain.com"
                                    required autocomplete="off">
                            </div>
                        </div>

                        <div class="controls">
                            <div class="create">
                                <button type="button" class="cancel btn">Cancel</button>
                                <input type="submit" class="add btn" value="Add">
                            </div>
                        </div>
                    </form>
                    <!-- Add new account -->
                    <button class="account-create">
                        <span class="material-symbols-outlined">
                            add
                        </span>
                    </button>
        </section>
    </main>

    <!-- Footer -->
    <footer>
        <h5>
            Copyright Â© FonseLULW; API from
            <a href="https://pokeapi.co">pokeAPI</a>
        </h5>
    </footer>

    <!-- Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/scripts/universal.js"></script>
    <script src="/scripts/events.js"></script>
    <script src="/scripts/dashboard.js"></script>
</body>

</html>